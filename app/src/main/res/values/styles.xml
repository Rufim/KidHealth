<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="textColorSnackbar">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/md_grey_900</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/xxlight_grey</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/control_active</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="toolbarShadowDrawable">@drawable/shadow_light</item>
    </style>

    <style name="edit_text.login">
        <item name="android:background">@drawable/login_edit</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/White</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xlarge</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:gravity">left|center_vertical</item>"
    </style>

    <style name="edit_text">
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>

    <style name="button.login" parent="button">
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xlarge</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_height">56dp</item>
    </style>

</resources>
